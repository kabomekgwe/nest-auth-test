# Server configuration
PORT=3000
FRONTEND_URL=http://localhost:4200

# JWT configuration
JWKS_URI=https://your-auth-server/.well-known/jwks.json
JWT_AUDIENCE=your-api-audience
JWT_ISSUER=https://your-auth-server/
JWT_SECRET=your-secret-key-for-signing-tokens
JWT_ACCESS_EXPIRATION=15m
JWT_ACCESS_EXPIRATION_SECONDS=900
REFRESH_TOKEN_TTL=2592000 # 30 days in seconds

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=86400 # 24 hours in seconds

# Session configuration
SESSION_TTL=86400 # 24 hours in seconds
SESSION_INACTIVE_TIMEOUT=86400 # 24 hours in seconds
